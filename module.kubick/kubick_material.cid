class "KubickMaterial" "Material" {
    #version 1.0
    category "/Material/Kubick"
    doc "A Kubick material."
    
    color "color" {
        value 1 1 1
        texturable yes
        texture_filter "KubickTexture" // IMPORTANT: used to filter linkable textures from Clarisse's GUI (native textures will *NOT* work at all)
    }
}
